# Log Classifier Configuration Example
# Copy this file to .env or set these environment variables

# Backend Selection
# Options: ml_tfidf, rule_based, hybrid, disabled
LOG_CLASSIFIER_BACKEND=hybrid

# Performance Settings
LOG_CLASSIFIER_CACHE_SIZE=10000
LOG_CLASSIFIER_BATCH_SIZE=1000
LOG_CLASSIFIER_CONFIDENCE_THRESHOLD=0.3

# ML Model Settings
LOG_CLASSIFIER_MAX_FEATURES=1000
LOG_CLASSIFIER_AUTO_RETRAIN=false
# LOG_CLASSIFIER_MODEL_PATH=/path/to/custom/model.joblib

# Fallback Settings
LOG_CLASSIFIER_ENABLE_FALLBACK=true
LOG_CLASSIFIER_FALLBACK_CONFIDENCE=0.8

# Monitoring
LOG_CLASSIFIER_ENABLE_METRICS=true
LOG_CLASSIFIER_METRICS_INTERVAL=1000

# Debug Settings
LOG_CLASSIFIER_DEBUG=false
LOG_CLASSIFIER_LOG_MISCLASSIFICATIONS=false

# Quick Presets (uncomment one):
# For maximum performance:
# LOG_CLASSIFIER_BACKEND=hybrid
# LOG_CLASSIFIER_CACHE_SIZE=50000
# LOG_CLASSIFIER_CONFIDENCE_THRESHOLD=0.2

# For maximum accuracy:
# LOG_CLASSIFIER_BACKEND=ml_tfidf
# LOG_CLASSIFIER_MAX_FEATURES=2000
# LOG_CLASSIFIER_CONFIDENCE_THRESHOLD=0.5

# For minimal resource usage:
# LOG_CLASSIFIER_BACKEND=rule_based
# LOG_CLASSIFIER_CACHE_SIZE=1000
# LOG_CLASSIFIER_ENABLE_METRICS=false