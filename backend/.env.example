# Environment Variables Configuration
# Copy this file to .env and update the values for your deployment

# Database Configuration
DATABASE_URL=postgresql+asyncpg://monitoring_user:monitoring_pass@localhost:5432/monitoring

# Security Configuration
INGEST_SECRET=your-secure-shared-secret-key-here-change-this-in-production

# Application Configuration
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Logging Configuration (optional)
LOG_LEVEL=INFO

# Email Configuration (if using email alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=monitoring@yourcompany.com
EMAIL_TO=alerts@yourcompany.com

# Production Settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_WORKERS=1