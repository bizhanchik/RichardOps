# Environment Variables Configuration
# Copy this file to .env and update the values for your deployment

# Database Configuration
DATABASE_URL=postgresql+asyncpg://monitoring_user:monitoring_pass@localhost:5432/monitoring

# Security Configuration
INGEST_SECRET=your-secure-shared-secret-key

# Application Configuration
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Logging Configuration (optional)
LOG_LEVEL=INFO

# Production Settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_WORKERS=1

# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_LOGS_INDEX=monitoring-logs
OPENSEARCH_ALERTS_INDEX=monitoring-alerts